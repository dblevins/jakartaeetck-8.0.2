<project name="jsonp_api_jsonparserfactorytests" basedir="." default="usage"> 
  <import file="../../../../../../../../bin/xml/ts.import.xml"/> 

  <property name="app.name" value="jsonparserfactorytests"/>
  <property name="client.class" value="com.sun.ts.tests.jsonp.api.jsonparserfactorytests.Client"/>
  <property name="other.classes" value="com/sun/ts/tests/jsonp/common/*.class"/>
  <property name="resources.dir" value="${src.dir}/com/sun/ts/tests/jsonp/resources"/>
  <property name="data.files" value="jsonArrayWithAllTypesOfData.json, jsonObjectWithAllTypesOfData.json, jsonObjectUnknownEncoding.json"/>

  <target name="package">
      <ts.vehicles name="${app.name}">
        <ejb-elements>
          <fileset dir="${class.dir}" includes="${other.classes}"/>
          <fileset dir="${resources.dir}" includes="${data.files}"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="${class.dir}" includes="${other.classes}"/>
          <fileset dir="${resources.dir}" includes="${data.files}"/>
        </client-elements>
        <servlet-elements>
          <zipfileset dir="${class.dir}" includes="${other.classes}"
                      prefix="WEB-INF/classes"/>
          <zipfileset dir="${resources.dir}" includes="${data.files}"
                      prefix="WEB-INF/classes"/>
        </servlet-elements>
        <jsp-elements>
          <zipfileset dir="${class.dir}" includes="${other.classes}"
                      prefix="WEB-INF/classes"/>
          <zipfileset dir="${resources.dir}" includes="${data.files}"
                      prefix="WEB-INF/classes"/>
        </jsp-elements>
      </ts.vehicles>
  </target>

</project>
