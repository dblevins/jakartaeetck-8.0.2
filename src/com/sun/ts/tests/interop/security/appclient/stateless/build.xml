<project name="interop_security_appclient_stateless" basedir="." default="usage">
<import file="../../../../../../../../../bin/xml/ts.import.xml"/> 


  <target name="compile">
      <ts.javac includes="${pkg.dir}/**/*.java,
                          com/sun/ts/tests/ejb/ee/sec/stateless/common/*.java"/>
  </target>


  <target name="package" depends="compile">

      <ts.ejbjar descriptor="interop_secSL_appclient_j2ee2_ejb.xml"
                 archivename="interop_secSL_appclient_j2ee2">
        <fileset dir="${class.dir}" includes="com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTest.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestEJB.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestHome.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestRoleRef.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestRoleRefEJB.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestRoleRefHome.class"/>
      </ts.ejbjar>

      <ts.ear archivename="interop_secSL_appclient_j2ee2" includedefaultfiles="false">
        <fileset dir="${dist.dir}/${pkg.dir}" includes="interop_secSL_appclient_j2ee2_ejb.jar"/>
      </ts.ear>

      <ts.clientjar descriptor="interop_secSL_appclient_client.xml" 
                    archivename="interop_secSL_appclient"
                    mainclass="com.sun.ts.tests.interop.security.appclient.stateless.Client">
        <fileset dir="${class.dir}" includes="com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTest.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestHome.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestRoleRef.class,
                                              com/sun/ts/tests/ejb/ee/sec/stateless/common/SecTestRoleRefHome.class"/>
      </ts.clientjar>

      <ts.ear archivename="interop_secSL_appclient" includedefaultfiles="false">
        <fileset dir="${dist.dir}/${pkg.dir}" includes="interop_secSL_appclient_client.jar"/>
      </ts.ear>

  </target>

</project>
