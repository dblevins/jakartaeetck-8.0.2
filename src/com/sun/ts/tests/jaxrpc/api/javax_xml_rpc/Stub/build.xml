<project name="jaxrpc_api_javax_xml_rpc_Stub" basedir="." default="usage">
<import file="../../../../../../../../../bin/xml/ts.import.xml"/> 

  <property name="app.name" value="Stub"/>
  <property name="wsdl.file" value="HelloService.wsdl"/>
  <property name="MetaData.file" value="HelloService.xml"/>
  <property name="portable.classes" value="com/sun/ts/tests/jaxrpc/common/JAXRPC_Util.class,      com/sun/ts/tests/jaxrpc/common/JAXRPC_Data.class,      com/sun/ts/tests/jaxrpc/common/Constants.class,      com/sun/ts/tests/jaxrpc/api/javax_xml_rpc/Stub/MyServiceException.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc/Stub/Hello.class"/>

  <target name="-precompile">
    <ant dir="../../../sharedwebservices/helloservice" target="build" inheritAll="false"/>
    <ant dir="../../../sharedwebservices/hellosecureservice" target="build" inheritAll="false"/>
  </target>

  <target name="package" >

      <ts.vehicles name="${app.name}"
                   excludedfiles="">
        <ejb-elements>
          <fileset dir="${class.dir}" includes="${portable.classes}"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="${class.dir}" includes="${portable.classes}"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
        </client-elements>
        <servlet-elements>
          <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        </servlet-elements>
        <jsp-elements>
          <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        </jsp-elements>
      </ts.vehicles>

  </target>

</project>

