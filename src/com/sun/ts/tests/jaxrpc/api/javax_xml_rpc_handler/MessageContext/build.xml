<project name="jaxrpc_api_javax_xml_rpc_handler_MessageContext" basedir="." default="usage">
<import file="../../../../../../../../../bin/xml/ts.import.xml"/>

  <property name="app.name" value="MessageContext"/>
  <property name="wsdl.file" value="MessageContextService.wsdl"/>
  <property name="MetaData.file" value="MessageContext.xml"/>
  <property name="impl.classes" value="com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/HelloImpl.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ServerHandler1.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ServerHandler2.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ServerHandler3.class"/>
  <property name="portable.classes" value="com/sun/ts/tests/jaxrpc/common/HandlerBase.class     com/sun/ts/tests/jaxrpc/common/HandlerTracker.class,     com/sun/ts/tests/jaxrpc/common/JAXRPC_Util.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ClientHandler1.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ClientHandler2.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ClientHandler3.class,     com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/Hello.class"/>

  <target name="-precompile">
    <ant dir="../../../sharedwebservices/helloservice" target="build" inheritAll="false"/>
    <ant dir="../../../sharedwebservices/hellosecureservice" target="build" inheritAll="false"/>
  </target>

  <target name="package" >

      <ts.war archivename="${app.name}" descriptor="web.xml">
        <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
        <zipfileset dir="${class.dir}" includes="${impl.classes}" prefix="WEB-INF/classes"/>
        <zipfileset dir="." includes="webservices.xml" prefix="WEB-INF"/>
        <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        <zipfileset dir="." includes="${MetaData.file}"/>
      </ts.war>

      <ts.ear archivename="${app.name}" includedefaultfiles="false">
        <fileset dir="${dist.dir}/${pkg.dir}" includes="${app.name}_web.war"/>
      </ts.ear>

      <ts.vehicles name="${app.name}"
                   excludedfiles="com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/HelloImpl.class,
                                  com/sun/ts/tests/jaxrpc/api/javax_xml_rpc_handler/MessageContext/ServerHandler*.class">
        <ejb-elements>
          <fileset dir="${class.dir}" includes="${portable.classes}"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="${class.dir}" includes="${portable.classes}"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
        </client-elements>
        <servlet-elements>
          <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        </servlet-elements>
        <jsp-elements>
          <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        </jsp-elements>
      </ts.vehicles>

  </target>

</project>

