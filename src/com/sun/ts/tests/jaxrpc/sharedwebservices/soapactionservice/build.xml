<project default="usage" basedir="." name="jaxrpc_sharedwebservices_soapactionservice">
<import file="../../../../../../../../bin/xml/ts.import.xml"/>

  <property name="app.name" value="SoapActionService"/>
  <property name="service.name" value="SoapAction"/>
  <property name="wsdl.file" value="SoapAction.wsdl"/>
  <property name="MetaData.file" value="SoapAction.xml"/>
  <property name="impl.classes" value="${pkg.dir}/SoapActionImpl.class"/>
  <property name="portable.classes" value=" com/sun/ts/tests/jaxrpc/common/JAXRPC_Util.class,  com/sun/ts/tests/jaxrpc/common/JAXRPC_Data.class,  com/sun/ts/tests/jaxrpc/common/Constants.class,  com/sun/ts/tests/jaxrpc/wsi/constants/WSIConstants.class,  ${pkg.dir}/SoapAction.class, ${pkg.dir}/SoapActionTest.class"/>

  <target name="-precompile">
      <ts.javac includes="com/sun/ts/tests/jaxrpc/common/**/*.java,
                          com/sun/ts/tests/jaxrpc/wsi/**/*.java"/>
  </target>

  <target name="package" >
      <ts.war archivename="${app.name}" descriptor="web.xml">
        <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
        <zipfileset dir="${class.dir}" includes="${impl.classes}" prefix="WEB-INF/classes"/>
        <zipfileset dir="." includes="webservices.xml" prefix="WEB-INF"/>
        <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        <zipfileset dir="." includes="${MetaData.file}"/>
      </ts.war>
      <ts.ear archivename="${app.name}"/>
  </target>

</project>
