<project default="usage" basedir="." name="jaxrpc_wsi_w2j_rpc_literal_R1006">
<import file="../../../../../../../../../../../bin/xml/ts.import.xml"/>

  <property name="app.name" value="W2JRLR1006TestService"/>
  <property name="service.name" value="SimpleTest"/>
  <property name="client.class" value="com.sun.ts.tests.jaxrpc.wsi.w2j.rpc.literal.R1006.Client"/>
  <property name="wsdl.file" value="SimpleTest.wsdl"/>
  <property name="MetaData.file" value="SimpleTest.xml"/>
  <property name="impl.classes" value=" ${pkg.dir}/SimpleEndpointImpl.class,  ${pkg.dir}/R1006ConformanceChecker.class,  com/sun/ts/tests/jaxrpc/common/RequestConformanceChecker.class"/>

  <property name="portable.classes" value=" com/sun/ts/tests/jaxrpc/common/JAXRPC_Util.class,  com/sun/ts/tests/jaxrpc/common/JAXRPC_Data.class,  com/sun/ts/tests/jaxrpc/common/Constants.class,  com/sun/ts/tests/jaxrpc/wsi/constants/*.class,  ${pkg.dir}/SimpleEndpoint.class,  ${pkg.dir}/SimpleTest.class"/>

  <property name="client.classes" value=" ${portable.classes},  com/sun/ts/tests/jaxrpc/wsi/requests/*.class,  com/sun/ts/tests/jaxrpc/wsi/utils/*.class,  com/sun/ts/tests/jaxrpc/sharedclients/*.class,  ${pkg.dir}/Client.class,  ${pkg.dir}/W2JRLR1006Client.class"/>

  <target name="-precompile">
      <ts.javac includes="com/sun/ts/tests/jaxrpc/common/**/*.java,
                          com/sun/ts/tests/jaxrpc/sharedclients/*.java,
                          com/sun/ts/tests/jaxrpc/wsi/**/*.java"/>
  </target>

  <target name="package" >
      <ts.war archivename="${app.name}" descriptor="web.xml">
        <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
        <zipfileset dir="${class.dir}" includes="${impl.classes}" prefix="WEB-INF/classes"/>
        <zipfileset dir="." includes="webservices.xml" prefix="WEB-INF"/>
        <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        <zipfileset dir="." includes="${MetaData.file}"/>
      </ts.war>

      <ts.ear archivename="${app.name}" includedefaultfiles="false">
        <fileset dir="${dist.dir}/${pkg.dir}" includes="${app.name}_web.war"/>
      </ts.ear>

      <ts.vehicles name="${app.name}"
                   excludedfiles="com/sun/ts/tests/jaxrpc/wsi/w2j/rpc/literal/R1006/R1006ConformanceChecker.class,
                                  com/sun/ts/tests/jaxrpc/wsi/w2j/rpc/literal/R1006/SimpleEndpointImpl.class">
        <ejb-elements>
          <fileset dir="${class.dir}" includes="${client.classes}"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="${class.dir}" includes="${client.classes}"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
        </client-elements>
        <servlet-elements>
          <zipfileset dir="${class.dir}" includes="${client.classes}" prefix="WEB-INF/classes"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        </servlet-elements>
        <jsp-elements>
          <zipfileset dir="${class.dir}" includes="${client.classes}" prefix="WEB-INF/classes"/>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        </jsp-elements>
      </ts.vehicles>

  </target>

</project>

