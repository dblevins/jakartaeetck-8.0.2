<project name="ejb3 lite" basedir="." default="usage">
  <import file="../../../../../common/import.xml" />
  <property name="app.name" value="ejblite_packaging_embed_classloader_descriptor" />
  <property name="app.common" value="com/sun/ts/tests/ejb30/lite/basic/common" />
  <property name="app.common.2" value="com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated" />

  <target name="package">
    <ts.vehicles name="${app.name}" buildleveloverride="2"
      classes="com/sun/ts/tests/ejb30/lite/basic/common/GlobalJNDITest.class,
               com/sun/ts/tests/ejb30/common/helper/ServiceLocator.class,
               com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/BeanBase.class
               com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/Client.class
               com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/LocalIF.class
               com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/OneBean.class
               "
      excludedfiles="
        com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/TwoBean.class,
        com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/ThreeBean.class
        ">
    </ts.vehicles>

    <ts.ejbjar archivename="ejbembed_two" descriptor="ejbembed_two_ejb.xml" includedefaultfiles="false">
      <fileset dir="${class.dir}" includes="com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/TwoBean.class" />
    </ts.ejbjar>
    <ts.ejbjar archivename="ejbembed_three" descriptor="ejbembed_three_ejb.xml" includedefaultfiles="false">
      <fileset dir="${class.dir}" includes="com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/ThreeBean.class" />
    </ts.ejbjar>
    
    <mkdir dir="${ts.home}/dist/${pkg.dir}/23/META-INF" />
    <copy overwrite="true" todir="${ts.home}/dist/${pkg.dir}/23">
      <fileset dir="${class.dir}" includes="
      com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/TwoBean.class,
      com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/ThreeBean.class"/>
    </copy>
    <copy overwrite="true" tofile="${ts.home}/dist/${pkg.dir}/23/META-INF/ejb-jar.xml" file="23-ejb-jar.xml" />
    
    <mkdir dir="${ts.home}/dist/${pkg.dir}/2/META-INF" />
    <copy overwrite="true" todir="${ts.home}/dist/${pkg.dir}/2">
      <fileset dir="${class.dir}" includes="
      com/sun/ts/tests/ejb30/lite/packaging/embed/classloader/annotated/TwoBean.class"/>
    </copy>
    <copy overwrite="true" tofile="${ts.home}/dist/${pkg.dir}/2/META-INF/ejb-jar.xml" file="2-ejb-jar.xml" />
  </target>
</project>
