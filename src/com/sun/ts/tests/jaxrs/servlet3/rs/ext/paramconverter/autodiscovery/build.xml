<project name="jaxrs_servlet3_rs_ext_paramconverter_autodiscovery" basedir="." default="usage">
    
	<import file="../../../../../../../../../../../bin/xml/ts.import.xml"/>		
	<property name="app.name" value="jaxrs_servlet3_rs_ext_paramconverter_autodiscovery" />
    
	<target name="compile">
        <ts.javac includes="${pkg.dir}/**/*.java,
        com/sun/ts/tests/jaxrs/common/*.java"/>
    </target>
	
	<property name="web.war.classes" value="com/sun/ts/tests/jaxrs/servlet3/rs/ext/paramconverter/autodiscovery/Resource.class,
		com/sun/ts/tests/jaxrs/common/provider/StringBeanParamConverter.class,
		com/sun/ts/tests/jaxrs/common/provider/StringBeanParamConverterProvider.class,
		com/sun/ts/tests/jaxrs/common/provider/PrintingErrorHandler.class,
		com/sun/ts/tests/jaxrs/common/provider/StringBean.class,
		com/sun/ts/tests/jaxrs/servlet3/rs/ext/paramconverter/autodiscovery/TSAppConfig.class" />

    <target name="package">
        <ts.war archivename="${app.name}" descriptor="${app.name}_web.xml">
            <zipfileset dir="${class.dir}"
                        prefix="WEB-INF/classes"
                        includes="${web.war.classes}"/>
        </ts.war>
    </target>
	
</project>
