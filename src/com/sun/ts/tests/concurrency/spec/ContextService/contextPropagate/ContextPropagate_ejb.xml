<ejb-jar version="3.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <enterprise-beans>
    <session>
      <ejb-name>ContextPropagateBean</ejb-name>
      <env-entry>
        <env-entry-name>java:comp/env/myMessage</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>JNDIContextEJB</env-entry-value>
      </env-entry>
    </session>
    <session>
      <ejb-name>LimitedBean</ejb-name>
    </session>
  </enterprise-beans>

  <assembly-descriptor>
    <security-role>
      <role-name>manager</role-name>
    </security-role>

    <method-permission>
      <role-name>manager</role-name>
      <method>
        <ejb-name>LimitedBean</ejb-name>
        <method-name>doSomething</method-name>
      </method>
    </method-permission>

  </assembly-descriptor>
</ejb-jar>
