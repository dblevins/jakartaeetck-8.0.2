<project name="concurrency_api_Trigger" basedir="." default="usage">

    <!-- IMPORTS -->

    <import file="../../../../../../../../bin/xml/ts.import.xml"/>

    <property name="app.name" value="${ant.project.name}"/>
    <property name="api-common" value="com/sun/ts/tests/concurrency/api/common"/>
    <property name="common" value="com/sun/ts/tests/concurrency/common"/>
    
    <target name="compile">
      <ts.javac includes="${pkg.dir}/**/*.java,
                          ${api-common}/**/*.java,
                          ${common}/**/*.java"/>
    </target>

    <target name="package" >
      <ts.vehicles name="${app.name}" singleear="true" classes="${api-common}/**/*.class,${common}/**/*.class"/>
    </target>

</project>
