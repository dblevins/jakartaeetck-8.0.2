<project name="servlet_ee_platform_deploy_ejblink_single" basedir="." default="usage">

 <import file="../../../../../../../../../../../bin/xml/ts.import.xml"/> 

  <property name="my.app.name" value="servlet_ee_platform_deploy_ejblink_single"/>

  <target name="package">
      <ts.ejbjar descriptor="${my.app.name}_ejb.xml" archivename="${my.app.name}"
                 excludedfiles="com/sun/ts/tests/servlet/ee/platform/deploy/ejblink/single/ServletTest.class">
        <fileset dir="${class.dir}"
                 includes="${ts.wrappers.classes.all.ejb},
                            com/sun/ts/tests/assembly/util/refbean/*External.class,
                            com/sun/ts/tests/assembly/util/refbean/*ExternalEJB.class,
                            com/sun/ts/tests/assembly/util/refbean/*ExternalHome.class,
                            com/sun/ts/tests/assembly/util/refbean/*ExternalHomeEJB.class"/>
      </ts.ejbjar>

      <ts.war archivename="${my.app.name}" descriptor="${my.app.name}_web.xml">
        <zipfileset dir="${class.dir}" 
                    includes="${ts.wrappers.classes.servlet.server},
                              com/sun/ts/tests/assembly/util/shared/ejbref/single/TestCode.class,
                              com/sun/ts/tests/assembly/util/refbean/*Internal.class,
                              com/sun/ts/tests/assembly/util/refbean/*InternalHome.class,
                              com/sun/ts/tests/assembly/util/refbean/*External.class,
                              com/sun/ts/tests/assembly/util/refbean/*ExternalHome.class"
                    prefix="WEB-INF/classes"/>
      </ts.war>

      <ts.clientjar archivename="${my.app.name}" descriptor="${my.app.name}_client.xml"
                    mainclass="com.sun.ts.tests.servlet.ee.platform.deploy.ejblink.single.Client"
                    excludedfiles="com/sun/ts/tests/servlet/ee/platform/deploy/ejblink/single/ServletTest.class">
        <fileset dir="${class.dir}" 
                 includes="${ts.dao.classes.coffee.standard},
                           ${ts.wrappers.classes.servlet.client}"/>
      </ts.clientjar>

      <ts.ear archivename="${my.app.name}"/>
  </target>

  <target name="compile">
      <ts.javac includes="${pkg.dir}/**/*.java,
                          com/sun/ts/tests/assembly/util/refbean/**/*.java,
                          com/sun/ts/tests/common/ejb/wrappers/**/*.java,
                          com/sun/ts/tests/jms/common/**/*.java"/>
  </target>

</project>
