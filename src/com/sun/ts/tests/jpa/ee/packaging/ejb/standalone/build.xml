<project name="jpa_ee_packaging_ejb_standalone" default="usage" basedir=".">

   <!-- IMPORTS -->

  <import file="../../../../common/persistence-import.xml"/>

   <property name="jpa_ee_common_classes"
             value="com/sun/ts/tests/jpa/ee/common/A.class,
	  	    com/sun/ts/tests/jpa/ee/common/B.class"/>

   <property name="app.name" value="jpa_ee_packaging_ejb_standalone"/>

   <target name="package">

        <ts.ejbjar archivename="${app.name}_component" descriptor="${app.name}_component_ejb.jar.xml">
         	<fileset dir="${class.dir}"
                includes="
		${pkg.dir}/Stateful3Bean.class,
		${jpa_ee_common_classes}"/>
            	<zipfileset dir="." includes="persistence.xml" prefix="META-INF"/>
        </ts.ejbjar>

        <ts.clientjar archivename="${app.name}"
              mainclass="${package}.Client"
              excludedfiles="${pkg.dir}/Stateful3Bean.class">
        </ts.clientjar>

        <ts.ear archivename="${app.name}_ejb"
                              deletecomponentarchives="true"
                              includedefaultfiles="false">
                              <fileset dir="${dist.dir}/${pkg.dir}"
                                   includes="${app.name}_client.jar"/>
        </ts.ear>

   </target>

</project>
