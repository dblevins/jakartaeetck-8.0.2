<project name="jpa_ee_packaging_web_standalone" default="usage" basedir=".">

    <!-- IMPORTS -->


    <import file="../../../../common/persistence-import.xml"/>

    <property name="app.name" value="jpa_ee_packaging_web_standalone"/>

    <property name="jpa_ee_common_classes"
              value="com/sun/ts/tests/jpa/ee/common/Account.class"/>

    <property name="servlet_common_classes"
              value="com/sun/ts/tests/jpa/ee/util/HttpTCKServlet.class,
		            com/sun/ts/tests/jpa/ee/util/Data.class"/>

    <target name="package">

        <ts.par descriptor="persistence.xml"
                archivename="${app.name}">

            <fileset dir="${class.dir}"
                     includes="${jpa_ee_common_classes}"/>
        </ts.par>


        <ts.war archivename="${app.name}_component" includedefaultfiles="false"
                descriptor="${app.name}_component_web.xml">
            <zipfileset dir="${class.dir}"
                        includes="${pkg.dir}/ServletTest.class,
 				  ${servlet_common_classes}"
                        prefix="WEB-INF/classes"/>
            <zipfileset dir="${dist.dir}/${pkg.dir}"
                        includes="${app.name}.jar"
                        prefix="WEB-INF/lib"/>

        </ts.war>

        <!-- Explictly delete the persistence archive as it is package in the WAR -->

        <delete file="${dist.dir}/${pkg.dir}/${app.name}.jar"/>

    </target>

</project>
