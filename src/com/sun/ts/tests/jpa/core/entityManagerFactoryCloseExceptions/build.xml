<project name="jpa_core_entityManagerFactoryCloseException" basedir="." default="usage">

    <!-- IMPORTS -->

    <import file="../../common/persistence-import.xml"/>

    <property name="app.name" value="${ant.project.name}"/>

    <target name="package">

        <jar destfile="${dist.dir}/${pkg.dir}/${app.name}.jar" >
            <zipfileset dir="${persistence.descriptor.dir}" includes="persistence.xml"
                        prefix="META-INF"/>
        </jar>

        <ts.vehicles name="${app.name}" singleear="true">
            <servlet-elements>
                <zipfileset dir="/"
                            includes="${app.name}.jar"
                            prefix="WEB-INF/lib"/>
            </servlet-elements>
            <ear-elements>
                <zipfileset dir="${dist.dir}/${pkg.dir}"
                            includes="${app.name}.jar"
                            prefix="lib"/>
            </ear-elements>
        </ts.vehicles>
    </target>

</project>
