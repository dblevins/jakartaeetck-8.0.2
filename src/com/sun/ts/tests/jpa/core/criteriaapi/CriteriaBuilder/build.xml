<project name="jpa_core_criteriaapi_CriteriaBuilder" basedir="." default="usage">

    <import file="../../../common/persistence-import.xml"/>
    <import file="../../../common/schema30/properties.xml"/>

    <property name="app.name" value="jpa_core_criteriapia_CriteriaBuilder"/>

    <property name="par.classes" value="${all.par.classes}"/>

    <target name="clean">
        <delete failonerror="false" includeEmptyDirs="true" dir="${class.dir}/${jpa_common_schema30_dir}"/>
        <antcall target="TestImport.clean"/>
    </target>

    <target name="compile">
        <ts.javac includes="${jpa_common_schema30_dir}/*.java"/>
        <antcall target="TestImport.compile"/>
    </target>

    <target name="package">
        <ts.par descriptor="persistence.xml"
                descriptordir="${persistence.descriptor.dir}"
                archivename="${app.name}">

            <fileset dir="${class.dir}"
                     includes="${par.classes}"/>
        </ts.par>

        <ts.vehicles name="${app.name}" singleear="true">
            <servlet-elements>
                <zipfileset dir="/"
                            includes="${app.name}.jar"
                            prefix="WEB-INF/lib"/>
                <zipfileset dir="${class.dir}" 
			                includes="${util.classes}"
                            prefix="WEB-INF/classes"/>
            </servlet-elements>
            <ear-elements>
                <zipfileset dir="${dist.dir}/${pkg.dir}"
                            includes="${app.name}.jar"
                            prefix="lib"/>
            </ear-elements>
            <jar-elements>
              <zipfileset dir="${class.dir}" includes="${util.classes}"/>
            </jar-elements>
        </ts.vehicles>
    </target>

</project>
