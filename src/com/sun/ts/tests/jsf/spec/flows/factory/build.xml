<project name="jsf_flows_factory" basedir="." default="usage">
    
    <!-- IMPORTS -->
    <import file="../common/flows_common.xml"/>
    
    <property name="app.name" value="factory"/> 
    
    <target name="package">
        <ts.war archivename="jsf_flows_${app.name}" 
        		descriptor="jsf_flows_${app.name}_web.xml">
        	<zipfileset dir="."
        	        	includes="faces-config.xml"
        	        	prefix="WEB-INF"/>
        	<zipfileset dir="${flows.common.dir}"
        	            includes="beans.xml"
        	            prefix="WEB-INF"/>
            <zipfileset dir="${ts.home}/weblib"
                        includes="*.jar"
                        prefix="WEB-INF/lib"/>
            <zipfileset dir="${webpage.dir}/${app.name}"
                     	includes="*.xhtml"/>
        </ts.war>       
    </target>
    
</project>
