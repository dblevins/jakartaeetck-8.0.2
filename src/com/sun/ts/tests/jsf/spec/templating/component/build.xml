<project name="jsf_template_component" basedir="." default="usage">

	<!-- IMPORTS -->
	<import file="../common/templating.common.xml" />

	<property name="app.name" value="jsf_templating_component" />

	<target name="package">
		<ts.war archivename="${app.name}" descriptor="${app.name}_web.xml">

			<zipfileset dir="${templating.common.class}" includes="*.class" prefix="${common.class.prefix}" />

			<zipfileset dir="${ts.home}/weblib" includes="*.jar" prefix="WEB-INF/lib" />

			<fileset dir="${jsp.dir}/component" includes="*.xhtml" />

			<zipfileset dir="${src.dir}/${pkg.dir}" includes="faces-config.xml" prefix="WEB-INF" />
		</ts.war>
	</target>

</project>
