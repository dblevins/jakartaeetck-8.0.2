<project name="common_templating" basedir=".">
    <!-- Top level JSF build.xml -->
    <import file="../../../common/common.xml"/>
    
    <!-- Common src directory for coretags tests. -->
    <property name="templating.common.dir"
              value="${src.dir}/${tests.pkg.dir}/jsf/spec/templating/common"/>
              
    <!-- Common class directory for coretags tests. -->
    <property name="templating.common.class"
              value="${class.dir}/${tests.pkg.dir}/jsf/spec/templating/common"/>
              
    <!-- Common class prefix for the templating common directory. -->
    <property name="common.class.prefix" 
              value="WEB-INF/classes/${tests.pkg.dir}/jsf/spec/templating/common"/>
    
    <!-- JavaServer Pages common directory for coretags tests. -->
    <property name="jsp.dir" value="${src.dir}/web/jsf/spec/templating"/>
    
    <!-- Override top level target to compile utility classes -->
    <target name="compile" description="jsf/spec/templating test specific.">
        <ts.javac includes="${pkg.dir}/**/*.java,
                  ${tests.pkg.dir}/common/webclient/**/*.java,
                  ${jsf.common}/**/*.java, 
                  ${tests.pkg.dir}/jsf/spec/templating/common/*.java"/>
    </target>
    
</project>
