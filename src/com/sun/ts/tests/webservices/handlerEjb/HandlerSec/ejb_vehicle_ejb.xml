<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <display-name>Ejb1</display-name>
  <enterprise-beans>
    <session>
      <ejb-name>com_sun_ts_tests_common_vehicle_ejb_EJBVehicle</ejb-name>
      <home>com.sun.ts.tests.common.vehicle.ejb.EJBVehicleHome</home>
      <remote>com.sun.ts.tests.common.vehicle.ejb.EJBVehicleRemote</remote>
      <ejb-class>com.sun.ts.tests.common.vehicle.ejb.EJBVehicle</ejb-class>
      <session-type>Stateful</session-type>
      <transaction-type>Container</transaction-type>
      <service-ref>
        <service-ref-name>service/handlersec</service-ref-name>
        <service-interface>javax.xml.rpc.Service</service-interface>
        <wsdl-file>META-INF/wsdl/HandlerSec.wsdl</wsdl-file>
        <jaxrpc-mapping-file>HandlerSec.xml</jaxrpc-mapping-file>
        <port-component-ref>
          <service-endpoint-interface>com.sun.ts.tests.webservices.handlerEjb.HandlerSec.TestQuery</service-endpoint-interface>
        </port-component-ref>
    
        <port-component-ref>
          <service-endpoint-interface>com.sun.ts.tests.webservices.handlerEjb.HandlerSec.TestNoSec</service-endpoint-interface>
        </port-component-ref>
    
        <port-component-ref>
          <service-endpoint-interface>com.sun.ts.tests.webservices.handlerEjb.HandlerSec.TestAuth</service-endpoint-interface>
        </port-component-ref>
    
        <port-component-ref>
          <service-endpoint-interface>com.sun.ts.tests.webservices.handlerEjb.HandlerSec.TestUnAuth</service-endpoint-interface>
        </port-component-ref>
      </service-ref>
      <security-identity>
        <use-caller-identity/>
      </security-identity>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>com_sun_ts_tests_common_vehicle_ejb_EJBVehicle</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>runTest</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
