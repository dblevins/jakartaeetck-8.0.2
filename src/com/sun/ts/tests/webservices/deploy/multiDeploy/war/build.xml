<project name="multiDeployWar" basedir="." default="usage">
<import file="../../../../../../../../../bin/xml/ts.import.xml"/>

  <property name="app.name" value="MultiDeployWar"/>
  <property name="client.app.name" value="MultiDeployWarClient"/>
  <property name="client.class" value="com.sun.ts.tests.webservices.deploy.multiDeploy.war.Client"/>
  <property name="wsdl.file" value="MultiDeployWar.wsdl"/>
  <property name="MetaData.file" value="MultiDeployWar.xml"/>


  <target name="package" depends="compile">

      <ts.war archivename="${app.name}" descriptor="web.xml">
        <zipfileset dir="." includes="webservices.xml" prefix="WEB-INF"/>
        <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        <fileset dir="." includes="${MetaData.file}"/>
        <zipfileset dir="${class.dir}" includes="${portable.classes}, ${impl.classes}" prefix="WEB-INF/classes"/>
      </ts.war>

      <ts.ear archivename="${app.name}" includedefaultfiles="false">
         <fileset dir="${dist.dir}/${pkg.dir}" includes="${app.name}_web.war"/>
      </ts.ear>

      <ts.clientjar archivename="${client.app.name}" descriptor="${client.app.name}_client.xml"
                    mainclass="${client.class}"
                    excludedfiles="com/sun/ts/tests/webservices/deploy/multiDeploy/war/HelloJavaBean.class,
                                   com/sun/ts/tests/webservices/deploy/multiDeploy/war/HelloJavaBean2.class">
        <fileset dir="." includes="${MetaData.file}"/>
        <zipfileset dir= "." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
      </ts.clientjar>

      <ts.ear archivename="${client.app.name}" includedefaultfiles="false">
         <fileset dir="${dist.dir}/${pkg.dir}" includes="${client.app.name}_client.jar"/>
      </ts.ear>

  </target>

</project>
