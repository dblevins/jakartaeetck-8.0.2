<project name="webservices_handler_HandlerLifecycle" basedir="." default="usage">
<import file="../../../../../../../../bin/xml/ts.import.xml"/>

  <property name="app.name" value="HLifecycleT"/>
  <property name="service.name" value="HandlerLifecycleService"/>
  <property name="wsdl.file" value="HandlerService1.wsdl"/>
  <property name="MetaData.file" value="HandlerService1.xml"/>
  <property name="impl.classes" value="com/sun/ts/tests/jaxrpc/common/HandlerBase.class"/>
  <property name="portable.classes" value="com/sun/ts/tests/jaxrpc/common/HandlerTracker.class,
                                           com/sun/ts/tests/jaxrpc/common/HandlerBase.class"/>


  <target name="package" depends="compile">

      <ts.war archivename="${app.name}" descriptor="web.xml"
              excludedfiles="com/sun/ts/tests/webservices/handler/HandlerLifecycle/HandlerService1.class">
        <zipfileset dir="." includes="webservices.xml" prefix="WEB-INF"/>
        <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
        <fileset dir="." includes="${MetaData.file}"/>
        <zipfileset dir="${class.dir}" prefix="WEB-INF/classes"
                    includes="${portable.classes}, ${impl.classes},
                              com/sun/ts/tests/webservices/handler/HandlerLifecycle/ClientHandler.class"/>
      </ts.war>

      <ts.ear archivename="${app.name}" includedefaultfiles="false">
         <fileset dir="${dist.dir}/${pkg.dir}" includes="${app.name}_web.war"/>
      </ts.ear>

    <ts.vehicles name="${app.name}"
                  excludedfiles="com/sun/ts/tests/webservices/handler/HandlerLifecycle/HandlerService1.class,
                                 com/sun/ts/tests/webservices/handler/HandlerLifecycle/HelloImpl.class,
                                 com/sun/ts/tests/webservices/handler/HandlerLifecycle/ServerHandler.class">
        <ejb-elements>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir= "." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
          <fileset dir="${class.dir}" includes="${portable.classes}"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir= "." includes="${wsdl.file}" prefix="META-INF/wsdl"/>
          <fileset dir="${class.dir}" includes="${portable.classes}"/>
        </client-elements>
        <servlet-elements>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
          <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
        </servlet-elements>
        <jsp-elements>
          <fileset dir="." includes="${MetaData.file}"/>
          <zipfileset dir="." includes="${wsdl.file}" prefix="WEB-INF/wsdl"/>
          <zipfileset dir="${class.dir}" includes="${portable.classes}" prefix="WEB-INF/classes"/>
        </jsp-elements>
      </ts.vehicles>

  </target>

</project>
