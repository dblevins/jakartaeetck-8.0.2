<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>JspConfigurationIncludes</display-name>
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/prelude1.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/coda1.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <url-pattern>/two/*</url-pattern>
            <include-prelude>/WEB-INF/jspf/prelude2.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/coda2.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <url-pattern>/three/*</url-pattern>
            <is-xml>true</is-xml>
            <include-prelude>/WEB-INF/jspf/prelude2.jspf</include-prelude>
            <include-prelude>/WEB-INF/jspf/prelude3.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/coda2.jspf</include-coda>
            <include-coda>/WEB-INF/jspf/coda3.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
